<div id="user-container">

    <!------- Dashboard ---->
    <div id="user-outer-row-1" class="row">

        <div id="user-outer-row-1" class="row">

            <!----- Left Column----->
            <div id="loans-col-left" class="col-md-5 table-responsive">

                <!------ Name ----->
                <div id="user-inner-div-1">
                    <h1 id="user-FC"><%= @current_user.username %>'s Current Loans</h1>
                </div>

                <!------ Loans ----->
                <div id="user-inner-div-2">
                    <% if @loans.any? %>

                    <table id="loans-table" class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Company Name</th>
                                <th scope="col">Loan Amount</th>
                                <th scope="col">Loan Status</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <% @loans.each do |loan| %>
                                <tr>  
                                    <td><%= loan.company_name %></td>
                                    <td><%= loan.loan_amount %></td>
                                    <td><%= loan.loan_status %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table> 

                    <!-------------- FLASH ------------>
                    <div class="row justify-content-center w-25 offset-lg-1">
                        <% else %>
                            <p>No loans found</p>
                        <% end %>
                    </div>
                </div>

            </div>

            <!----- Right Column----->
            <div id="loans-col-right" class="col-md-7">
            </div>

        </div>

    </div>

    <hr>

    <!-------- Products -------->
    <div id="user-outer-row-2" class="row">


        <div id="user-inner-div-3" class="row align-items-start">

            <div id="products-FC" class="col-2">
                <h2>Products</h2>
            </div>

            <div id="products-small" class="col-sm-4">
                <div id="card-body-sm" class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm">
                                <h3 id="small-h3" class="card-title">Small Business Loan</h5>
                                <%= link_to 'Application', application_path, class: "btn btn-lg btn-outline-danger me-2" %>
                            </div>
                            <div class="col-sm">
                                <h6>Amount</h6>  
                                <p>£10,000 to £500,000<p>
                                <h6>Term Loan</h6> 
                                <p> to 6 years<p>
                                <h6>Interest Per Year</h6> 
                                </p>from 6.9%</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div id="products-large" class="col-sm-4">
                <div id="card-body-lg" class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm">
                                <h3 id="large-h3" class="card-title">Large Business Loan</h5>
                                <%= link_to 'Application', application_path, class: "btn btn-lg btn-outline-danger me-2" %>
                            </div>
                            <div class="col-sm">
                                <h6>Amount</h6>  
                                <p>£550,000 to £10,000,000<p>
                                <h6>Term Loan</h6> 
                                <p>up to 10 years<p>
                                <h6>Interest Per Year</h6> 
                                <p>from 10.2%</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

    <hr>

    <!-------- FC Banner -------->
    <div id="user-outer-row-3" class="row">

        <div class="col">
            ✔️ Short & long term finance
        </div>
        <div class="col">
            ✔️ Apply online in 7 minutes
        </div>
        <div class="col">
            ✔️ Get a quick decision
        </div>
        <div class="col">
            ✔️ UK-based support team
        </div>
        <div class="col">
            ✔️ Fixed interest rates
        </div>
    </div>

</div>